{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "ES2022",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["ES2022", "DOM"]
  },
  "include": [
    "src/**/*"
  ]
}
